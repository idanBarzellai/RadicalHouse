{
    "rules": {
        "rooms": {
            "$roomId": {
                ".read": true,
                ".write": true,
                "players": {
                    ".write": true,
                    "$playerId": {
                        ".read": true,
                        ".write": true,
                        ".validate": "newData.hasChildren(['name', 'id'])",
                        "name": {
                            ".validate": "newData.isString() && newData.val().length > 0"
                        },
                        "id": {
                            ".validate": "newData.isNumber()"
                        },
                        "disconnected": {
                            ".validate": "newData.isBoolean()"
                        },
                        "lastSeen": {
                            ".validate": "newData.isNumber()"
                        }
                    }
                },
                "stage": {
                    ".write": true
                },
                "spyIndex": {
                    ".write": true
                },
                "spyId": {
                    ".write": true
                },
                "turnStarterId": {
                    ".write": true
                },
                "startTimestamp": {
                    ".write": true
                },
                "endTimestamp": {
                    ".write": true
                },
                "preGameReady": {
                    "$playerId": {
                        ".write": true
                    }
                },
                "votes": {
                    "$playerId": {
                        ".write": true
                    }
                },
                "spyGuess": {
                    ".write": true
                },
                "shuffledPersonas": {
                    ".write": true
                },
                "event": {
                    ".write": true
                },
                "createdAt": {
                    ".write": true
                },
                "lastActivity": {
                    ".write": true
                }
            }
        }
    }
}